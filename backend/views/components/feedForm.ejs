<form  method="POST" class="main_form" action=<%= new_action %>>
    
    <input type="text" name=question placeholder="Question" value=<%= post.question %>>
    <% if(error && error.question) { %>
        <p class="error"><%= error.question.message %></p>
    <% } %>
    <br><br>
    <textarea name=description placeholder="Description" ><%= post.description %></textarea>
    <% if(error && error.description) { %>
        <p class="error"><%= error.description.message %></p>
    <% } %>
    <br>
    <button type="submit">Submit</button>
</form>
<hr>

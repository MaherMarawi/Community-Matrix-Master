<%- include('./components/header') %>

<div class="question">
        <a href="/ask" style="font-weight: 700; color: rgb(0, 204, 136);margin-left: 10px;padding-bottom: -10px;">Add
                question</a>
        <h5 style="margin-top: 0px; margin-left: 1000px;color: beige;">there are <%= data.length %> Questions</h5>
        <a href="/chat" style="margin-left: 50px;margin-right: 0px;padding-right: 10px;">Chat</a>
</div>


<div id="container">
        <% if(data.length > 0) { %>
        <% data.forEach(post => { %>
        <div style="display: grid;grid-template-columns: auto auto ;box-shadow: 2px 2px 8px;padding: 10px;border-radius: 10px;margin: 20px;">
                <div style="width: 800px;">
                        <h2><%= post.question %></h2><br>

                        <h3
                                style="color: rgb(121, 121, 121); height: 61px;overflow: hidden; margin-top: -20px;margin-bottom: 20px;">
                                <%= post.description %></h3>
                </div>


                <div style="margin-top: 15%;">
                        <p><a href=/question/<%= post.id %>>see more</a></p><br>
                        <p><%= post.createdAt.getDate() %>/<%= post.createdAt.getMonth() + 1 %>/<%= post.createdAt.getFullYear() %>
                        </p>
                        <!-- <h3><%= post.user_id %></h3> -->
                </div>


        </div>
        <% }) } else { %>
        <h3>There are no Questions to display</h3>
        <% } %>

</div>
<%- include('./components/footer.ejs') %>